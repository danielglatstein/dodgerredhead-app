<h1 class="title">
	<%= @posts.title %>
</h1>

<p class="date">
	submitted <%= time_ago_in_words(@posts.created_at) %> ago
	<% if user_signed_in?%>
	| <%= link_to 'Edit', edit_post_path(@posts) %>
	| <%= link_to 'Delete', post_path(@posts), method: :delete, data: { confirm: 'Are you Sure?' } %>
	<% end %>
</p>

<body class="body">
	<p> <%= @posts.body %> </p>
</body>