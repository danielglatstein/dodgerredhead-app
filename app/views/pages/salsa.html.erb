
  <%= stylesheet_link_tag 'salsastyle' %>

	<section class="single-element">
			<header>
				<h2 class="sec_name">Salsas</h2>
				<h3 class="sec_desc">THIS IS AN INTRO TO DANNYS WORK IN VIDEO</h3>
			</header>
			<div class="clearall"></div>
			<article class="artwork clearfix">
				<%= @salsa_posts.in_groups_of(3, false) do |row_salsa| %>
					<ul class='salsa'>
						<% row_salsa.each do |salsa| %>
							<a href=<%= post_path salsa %> >
								<li>
									<div class='img'>
										<%= image_tag salsa.image_url(:thumb).to_s %>
										<div class='triangle'></div>
									</div>
									<h4 class= 'title'> <%= link_to salsa.title, salsa %> </h4>
								</li>
							</a>
						<% end %>
					</ul>
				<% end %>
			</article>
	</section>
